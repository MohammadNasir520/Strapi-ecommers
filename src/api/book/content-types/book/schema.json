{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "book",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "required": true
    },
    "isAvailable": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "price": {
      "type": "float",
      "required": true,
      "default": 0
    },
    "stock": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "slug"
    }
  }
}
